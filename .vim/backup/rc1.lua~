require 'awful'
require 'beautiful'
require 'naughty'

beautiful.init('/usr/share/awesome/themes/default/theme.lua')

local terminal = 'terminal'
local editor = os.getenv('EDITOR')
local editor_command = ('%s -e %s'):format(terminal, editor)
local font = '-*-terminus-medium-r-normal-*-12-*-*-*-*-*-*-*'

local modkey = 'Mod4'

local layouts = {
	awful.layout.suit.tile,
	awful.layout.suit.tile.left,
	awful.layout.suit.tile.bottom,
	awful.layout.suit.tile.top,
	awful.layout.suit.fair,
	awful.layout.suit.fair.horizontal,
	awful.layout.suit.max,
	awful.layout.suit.max.fullscreen,
	awful.layout.suit.magnifier,
	awful.layout.suit.floating
}

local tags = {}
local widgets = {}

for i = 1,9 do
	tags[i] = tag(i)
	tags[i].screen = 1
	awful.layout.set(layouts[1], tags[i])
end
tags[1].selected = true

widgets.time = widget({type = 'textbox', align = 'right'})
widgets.time.text = '00:00' --date +"%F %R"

widgets.menu = awfu.widget.launcher({
	image = image(beautiful.awesome_icon),
	menu = awful.menu.new({
		items = {
			{
				'awesome',
				{
					{'restart', awesome.restart },
					{'quit', awesome.quit }
				},
				beautiful.awesome_icon
			},
			{'terminal', terminal}
		}
	})
})

widgets.tray = widget({type = 'systray', align = 'right')
