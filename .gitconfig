[github]
  user = Industrial

[alias]
  a   = add
  b   = branch
  c   = checkout
  cb  = checkout -b
  cm  = commit -m
  co  = checkout
  cob = checkout -b
  d   = diff
  dc  = diff --cached
  f   = fetch
  l   = log --all --oneline --graph --decorate=full
