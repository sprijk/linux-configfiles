  m   = merge
  p   = pull
  pa  = pull -a
  ps  = push
  rs  = reset
  rb  = rebase
  rbi = rebase -i
  rt  = remote
  ru  = remote update -p
  s   = status
  sh  = stash
  t   = tag

[push]
  default = simple
